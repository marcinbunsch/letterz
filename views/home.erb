    <script type="text/javascript">
      var bridge = new Bridge({ endpoint: 'http://secretz.heroku.com' })
      var secret = null;
      var preview = function() {
        if (secret) {
          $('.trigger').hide()
          $('.preview').html(secret).show()
          $('.preview').css({"font-family": $("#font").val()})
          $('.preview').css({"color": $("#color").val().toLowerCase()})
          $('body .workspace').show()
        }
      };
      $(function() {
        bridge.connect()
        $('.trigger a').click(function() {
          bridge.request({ method: 'get', url: "/api/secret.json" }).complete(function(data, response) {
            secret = data.secret
            preview()
          }).error(function(data, response) {
            if (response.status == 403) {
              $(".trigger").html("<a href='http://secretz.heroku.com'>You are not logged in to Secretz!\nGo to http://secretz.heroku.com to log in!</a>")
            }
          })
        })
        preview()
        $("#font").change(preview)
        $("#color").change(preview)
      })
    </script>
